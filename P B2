# P7 Bloque 2
# Realizado Por: Jesus Ismael Montantes Castillo 
# Tipos de datos en las listas.
# Fecha: 2024/30/10

cadenas = ["Juan","Pedro","Chuy"]
print(cadenas)  # Muestra la lista completa
print(cadenas[1]) # Imprime "Pedro"
print(type(cadenas)) # Imprime el tipo "list"
print(type(cadenas[1])) # Imprime el tipo "str"

enteros = [5, 4,8]
print(enteros)
print(enteros[0])
print(type(enteros))
print(type(enteros[0]))

booleanos = [True, False, False]
print(booleanos)
print(booleanos[0])
print(type(booleanos))
print(type(booleanos[0]))

# P9 Bloque 2 
# Igualdad en listas
# Fecha: 31/10/24
# Realizado por: Jesus Ismael Montantes Castillo
puntos=[10, 30, 20]
puntos_2=[10,30,20]
ordenados=[10,20,30]
puntos_texto=["10,20,30"]
print("COMPARACIÓN (==)")

print(puntos == puntos_2) # True
print(puntos == ordenados) # False
print( puntos == puntos_texto ) # False

print("AHORA COMPARAMOS CON !=")

print(puntos != puntos_2) # False
print( puntos != ordenados) #True
print( puntos != puntos_texto) # True

# P10 Bloque 2
# List Membership
# Realizado por: Jesus Ismael Montantes Castillo
nombres =["Choto", "Emilio", "Luis"]
print("Luis" in nombres) # True
print("Emi" in nombres ) # False
print("Javier" in nombres) # False
print("Jose" not in nombres)# True

